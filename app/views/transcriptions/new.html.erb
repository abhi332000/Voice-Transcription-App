<div class="transcribe-page" data-controller="voice-recorder">
  <div class="page-header">
    <h2>Voice Transcription</h2>
    <p>Click "Start Listening" to begin recording your voice</p>
  </div>

  <div class="recording-controls">
    <button
      data-voice-recorder-target="startButton"
      data-action="click->voice-recorder#startRecording"
      class="btn btn-primary btn-large">
      ğŸ¤ Start Listening
    </button>

    <button
      data-voice-recorder-target="stopButton"
      data-action="click->voice-recorder#stopRecording"
      class="btn btn-danger btn-large"
      style="display: none;">
      â¹ï¸ Stop Listening
    </button>

    <div data-voice-recorder-target="statusIndicator" class="status-indicator" style="display: none;">
      <span class="recording-dot"></span>
      <span>Recording...</span>
    </div>
  </div>

  <div class="transcription-section">
    <div class="live-transcription" data-voice-recorder-target="liveTranscription" style="display: none;">
      <h3>Live Transcription</h3>
      <div class="transcription-box" data-voice-recorder-target="liveText">
        <p class="placeholder">Your transcription will appear here as you speak...</p>
      </div>
    </div>

    <div data-voice-recorder-target="resultsSection" style="display: none;">
      <div class="final-transcription">
        <div class="section-header">
          <h3>Full Transcription</h3>
          <button data-action="click->voice-recorder#copyTranscription" class="btn btn-secondary btn-small">
            ğŸ“‹ Copy
          </button>
        </div>
        <div class="transcription-box" data-voice-recorder-target="finalTranscription">
        </div>
      </div>

      <div class="summary-section" data-voice-recorder-target="summarySection" style="display: none;">
        <h3>Summary</h3>
        <div class="summary-box" data-voice-recorder-target="summaryText">
          <div class="loading">Generating summary...</div>
        </div>
      </div>

      <div class="actions">
        <button data-action="click->voice-recorder#newRecording" class="btn btn-primary">
          ğŸ”„ New Recording
        </button>
      </div>
    </div>

    <div data-voice-recorder-target="errorMessage" class="error-message" style="display: none;"></div>
    <div data-voice-recorder-target="loadingIndicator" class="loading-indicator" style="display: none;">
      <div class="spinner"></div>
      <p>Processing your audio...</p>
    </div>
  </div>
</div>

